<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmlns.app="http://schemas.android.com/tools"
    android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:id="@+id/homeCardView"
    android:backgroundTint="@color/colorPrimaryDark"

    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"

       >

       <ImageView
           android:layout_margin="5dp"
           android:layout_width="60dp"
           android:layout_height="60dp"
            android:src="@drawable/ic_import_contacts_black_24dp"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:weightSum="6"
           >

           <TextView
               android:id="@+id/homeDiaryTitle"
              android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="4"
               android:layout_marginTop="7dp"
               android:gravity="center_vertical"
               android:text="Title is here"
               style="@style/normalTextStyle"

               />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2"
               android:orientation="horizontal"
               android:weightSum="2"
               >
               <TextView
                   android:id="@+id/txtViewCategory"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="Category"
                   android:textColor="@color/colorText"
                   android:textSize="12dp"
                   />
               <TextView
                   android:id="@+id/homeDiaryDate"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="5dp"
                   android:text="13:38:44:21 Feb 2018"
                   android:textSize="12dp"
                   android:textAlignment="textEnd"
                   android:layout_marginLeft="5dp"
                   style="@style/normalTextStyle"
                   android:layout_marginBottom="5dp"
                   android:layout_marginEnd="5dp"
                   />

           </LinearLayout>

       </LinearLayout>
   </LinearLayout>



</android.support.v7.widget.CardView>
</LinearLayout>
